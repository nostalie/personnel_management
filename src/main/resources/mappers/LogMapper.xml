<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.jlu.personnel.management.dao.LogDao">

    <resultMap id="BaseResultMap" type="cn.edu.jlu.personnel.management.vo.model.Log">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="operation_time" property="operationTime"/>
        <result column="operation_type" property="operationType"/>
        <result column="old_content" property="oldContent"/>
        <result column="new_content" property="newContent"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_name,operation_time,operation_type,old_content,new_content
    </sql>

    <insert id="insertLog" parameterType="Log">
        INSERT INTO log(
        user_name,
        operation_time,
        operation_type,
        old_content,
        new_content
        )VALUES (
        #{userName},
        #{operationTime},
        #{operationType},
        #{oldContent},
        #{newContent}
        )
    </insert>

    <select id="selectLogs" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM log
        ORDER BY operation_time DESC
    </select>
</mapper>