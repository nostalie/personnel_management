<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.jlu.personnel.management.dao.DepartmentDao">

    <resultMap id="BaseResultMap" type="cn.edu.jlu.personnel.management.vo.model.Department">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="tel" property="tel"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,tel,user_id,create_time,update_time
    </sql>

    <select id="selectDepartments" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM department
    </select>

    <select id="selectDepartmentById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM department
        WHERE id = #{departmentId}
    </select>

    <insert id="insertDepartment" parameterType="Department">
        INSERT INTO department(name,tel) VALUE (#{name},#{tel})
    </insert>

    <delete id="deleteDepartment" >
        DELETE FROM department
        WHERE id = #{departmentId}
    </delete>

    <update id="updateDepartment" parameterType="Department">
        UPDATE department
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        WHERE id = #{id} AND update_time = #{updateTime}
    </update>
</mapper>